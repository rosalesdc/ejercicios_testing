<odoo>
    <data>
        <template id="index">
            <t t-call="website.layout">
                <title>Academy</title>
                <div class="oe_structure">
                    <div class="container">
                        <t t-foreach="teachers" t-as="teacher">
                            <p>
                                <p>
                                    <t t-esc="teacher.id"/> 
                                    <t t-esc="teacher.name"/>
                                </p>
                            </p>
                        </t>
                    </div>
                    <div class="container">
                        <t t-foreach="teachers" t-as="teacher">
                            <table border ="1">
                                <tr>
                                    <td>
                                        <t t-esc="teacher.id"/>
                                    </td> 
                                    <td>
                                        <t t-esc="teacher.name"/>
                                    </td>
                                </tr>
                            </table>
                        </t>
                    </div>
                </div>
            </t>
        </template>
        <template id="biography">
            <t t-call="website.layout">
                <t t-set="title">Academy</t>
                <div class="oe_structure"/>
                <div class="oe_structure">
                    <div class="container">
                        <p>
                            <t t-esc="person.id"/> 
                            <t t-esc="person.name"/>
                        </p>
                    </div>
                </div>
                <div class="oe_structure"/>
            </t>
        </template>
    </data>
</odoo>