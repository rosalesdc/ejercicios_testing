<odoo>
    <data>
        
        <record id="action_project_milestone_view" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Project Milestone</field>
            <field name="res_model">project.milestone</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Create the first milestone</p>
            </field>
        </record>
 
        <record model="ir.ui.view" id="action_project_milestone_tree">
            <field name="name">Project Milestone</field>
            <field name="model">project.milestone</field>
            <field name="arch" type="xml">
                <tree string="Project Milestone" create="false">
                    <field name='nombre'/>
                    <field name='rfc' />
                </tree>
            </field>
        </record>

        <menuitem name="Project Milestone" 
                  action="action_project_milestone_view" 
                  id="menu_project_milestone_act" 
                  parent="project.menu_project_config" 
                  sequence="4"/>
    </data>
</odoo>